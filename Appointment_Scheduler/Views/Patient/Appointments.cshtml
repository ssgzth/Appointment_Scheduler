@model IEnumerable<Appointment>

    <div class="conatiner">
        <h2>Appointments</h2>
        <table class="table ">
        <thead class="table-dark">
       <tr>
           <td>Services</td>
           <td>Date</td>
           <td>Start Time</td>
           <td>End Time</td>
           <td>Actions</td>
       </tr>
   </thead>
   <tbody>
            @foreach(var appointment in Model)
            {
                <tr>
                    <td>@appointment.Service</td>
                    <td>@appointment.StartTime.ToString("dd/mm/yyyy")</td>
                    <td>@appointment.StartTime.ToString("h:mm tt")</td>
                    <td>@appointment.EndTime.ToString("h:mm tt")</td>
                   <td>
                       <a class="btn btn-primary bi bi-pen"></a>
                       <a class="btn btn-danger bi bi-trash"></a>
                      
                   </td>
                </tr>
            }
        </tbody>
</table>
    </div>
