<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Appointment_Scheduler</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Appointment_Scheduler.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.0/font/bootstrap-icons.css">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

    <style>
        .splash{
            position:relative;
        }
        #splashImg {
          height:40vh;
          width:100%;
          border-radius:10px;
          box-shadow: 2px 2px 5px rgba(0,0,0,0.3);
          float:none;
          background-repeat:no-repeat;
        }
        .tablecolor{
            background-color: #e0f3fe;
        }
        #overImg1{
            position:absolute;
            margin-left:20px;
            top:20vh;
            text-align:left;
            color: #26268e;
            z-index:1;
            font-size:36px;
        }
        #overImg2{
            position:absolute;
            z-index:1;
            top:30vh;
            font-size:18px;
            margin-left:20px;
        }
        #overImg3 {
            position: absolute;
            z-index: 1;
            top: 37vh;
            
            margin-left: 20px;
        }
      
    </style>


</head>
<body>

    <div style="height:auto;width:auto; background-color:#212529">
        <nav class="navbar navbar-expand-sm">
           <img src="~/Images/calendar_3092548.png"  style="height:40px; width:40px;" class="ms-4"/>
            <a asp-controller="Home" asp-action="Index" class="ms-2 " style="text-decoration:none" > <span class="ms-1 text-white">Appointment Scheduler</span> </a>
 
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item ">
                    <a asp-action="Register" asp-controller="Account" class="nav-link "> <span class="ms-1 d-none d-sm-inline text-white">Register</span> </a>
                    </li>

                    <li class="nav-item">
                    <a asp-action="Login" asp-controller="Account" class="nav-link "> <span class="mx-3 d-none d-sm-inline text-white">Login</span> </a>
                    </li>
                </ul>


        </nav>
    </div>

        <div class="container-fluid">
            <div class="row flex-nowrap">
                <div class="col-md-3 col-xl-2 px-sm-2 px-0 bg-dark">
                    <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
                        
                        <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                            <li class="nav-item">
                            <a asp-action="Index" asp-controller="Home" class="nav-link align-middle px-0 text-danger">
                                <i class="fs-4 bi-house text-danger"></i> <span class="ms-1 d-none d-sm-inline text-white">Home</span>
                                </a>
                            </li>
                           
                            <li>
                            <a asp-action="Appointment" asp-controller="Patient" class="nav-link px-0 align-middle">
                                <i class="fs-4 bi-table text-danger"></i> <span class="ms-1 d-none d-sm-inline text-white">Appointments</span>
                                </a>
                            </li>
                          
                            <li>
                            <a href="#"  class="nav-link px-0 align-middle text-danger">
                                <i class="fs-4 bi-grid text-danger"></i> <span class="ms-1 d-none d-sm-inline text-white">Services</span>
                                </a>
                                
                            </li>
                            <li>
                            <a href="#" class="nav-link px-0 align-middle text-danger">
                                <i class="fs-4 bi-people text-danger"></i> <span class="ms-1 d-none d-sm-inline text-white">Our Doctors</span>
                                </a>
                            </li>
                        </ul>
                        <hr>
                    
                    </div>
                </div>
                <div class="col py-3">
                <div class="container">

                    @RenderBody()

                </div>
                </div>
            </div>
        </div>

        <footer class="bg-dark" style="width:auto; height:20px; position:page"></footer>

</body>
</html>
